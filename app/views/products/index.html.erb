<% @products.each do |product| %>
<div class="col-md-1"></div>
<div class="col-md-5">
  <div class="well">

      <div class="pull-left">
        <img class="media-object thumbnail-preview" src='<%= product.image_url %>' alt="..." height=100px>
      </div>
      <h3><%= product.name %></h3>
      <h4><%= product.location %>&nbsp$<%= product.price %></h4>
      <div class="pull-right">
        <button class="btn btn-primary">Select</button>
      </div>
      <p><%= product.description %></p>

  </div>
</div>
<!-- <div class="col-md-6"></div> -->
<% end %>
