<p>
<%= form_for([@product]) do |f| %>
<%= f.text_field :name, :placeholder => "What is it?", :class => "welcome-form" %>
<%= f.text_field :description, :placeholder => "Describe it", :class => "welcome-form" %>
<%= f.text_field :location, :placeholder => "Where are you?", :class => "welcome-form" %>
<%= f.text_field :price, :placeholder => "How much is it?", :class => "welcome-form" %>
<%= f.text_field :image_url, :placeholder => "Image?", :class => "welcome-form" %>


<%= f.submit "Submit", {:class => "btn btn-primary"} %>
<% end %>
</p>