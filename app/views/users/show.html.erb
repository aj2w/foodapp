<div class="col-md-1"></div>

<div class="well product-show-main col-md-6">
  <h1><%= @user.email %>'s Listings</h1>
  <hr class="user-hr">
  <% @products.each do |product| %>
  <%= image_tag product.image.url(:thumb) %>
  <h2><%= product.name %></h2>
  <h3><%= product.location %>&nbsp $<%= product.price %></h3>
  <p><%= product.description %></p>
  <p><a class="btn btn-primary" href='/products/<%= product.id %>'>View Detail</a><br>
  <% end %>
</div>
<div class="col-md-1"></div>
<div class="col-md-3">
  <div class="well">
    <p><img src="http://www.gravatar.com/avatar/<%= @url_hash %>"/> </p>
    <p><%= @user.email %></p>
    </div>
    <div class="well">
      <%= gmaps(:markers => { :data => @json }, :map_options => { :auto_adjust => true, :auto_zoom => true, :zoom => 16 }) %>

    </div>
  </div>
